{
  "name": "actions-api",
  "version": "1.0.0",
  "description": "このリポジトリは **Actions API** を構成するためのセットアップコマンドを提供します。",
  "workspaces": [
    "api",
    "sdk"
  ],
  "scripts": {
    "lint": "xo",
    "format": "xo --fix",
    "test": "xo && node --test",
    "actions-api:init": "node src/main.js init",
    "actions-api:build": "node src/main.js sdk-update"
  },
  "keywords": [],
  "author": "MadakaHeri",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "esprima-next": "^6.0.3",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1"
  },
  "devDependencies": {
    "xo": "^0.60.0"
  },
  "xo": {
    "rules": {
      "capitalized-comments": "off"
    }
  },
  "actions-api": {
    "actionApiType": "aws-lambda",
    "apiPath": "api",
    "sdkConfig": {
      "rootPath": "sdk",
      "srcPath": "api/src/actions",
      "outPath": "sdk/src/actions"
    }
  }
}